<div class="container">
  <h1>Chat Room</h1>
  <div id="messages">
    <ul class="list-group">
      <%= render @messages %>
    </ul>
  </div>
  <div class="box">
    <h2 class="display-4">Input Message</h2>
    <form class="form-inline">
      <div class="form-group">
        <input type="text" class="form-control" id="chat-input">
      </div>
      <button id="button" class="btn btn-primary">送信</button>
    </form>
  </div>
</div>
